<div class="area">
  <div class="user-stats">
    <div class="stats">
      <div class="header"><%= gettext "Tweets" %></div>
      <div class="content <%= if @active === "tweets" do %>active<% end %>"><a href="<%= user_path(@conn, :show, @user.id) %>"><%= length(@user.tweets) %></a></div>
    </div>
    <div class="stats">
      <div class="header"><%= gettext "Following" %></div>
      <div class="content <%= if @active === "following" do %>active<% end %>"><a href="<%= user_following_path(@conn, :index, @user.id) %>"><%= length(@user.following) %></a></div>
    </div>
    <div class="stats">
      <div class="header"><%= gettext "Followers" %></div>
      <div class="content <%= if @active === "followers" do %>active<% end %>"><a href="<%= user_follower_path(@conn, :index, @user.id) %>"><%= length(@user.followers) %></a></div>
    </div>
    <div class="stats">
      <div class="header"><%= gettext "Favorites" %></div>
      <div class="content <%= if @active == "favorites" do %>active<% end %>"><a href="<%= user_favorite_path(@conn, :index, @user.id) %>"><%= length(@user.favorites) %></a></div>
    </div>
  </div>
</div>
